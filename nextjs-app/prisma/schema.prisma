model GalleryImage {
  id          Int      @id @default(autoincrement())
  title       String
  imageUrl    String   @map("image_url")
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true) @map("is_active")
  isCurrent   Boolean  @default(true) @map("is_current")
  previousVersionId Int? @map("previous_version_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("core_galleryimage")
}

// User model extending Django's AbstractUser
model User {
  id             Int            @id @default(autoincrement())
  username       String         @unique
  email          String         @unique
  password       String
  firstName      String?        @map("first_name")
  lastName       String?        @map("last_name")
  isStaff        Boolean        @default(false) @map("is_staff")
  isActive       Boolean        @default(true) @map("is_active")
  isSuperuser    Boolean        @default(false) @map("is_superuser")
  dateJoined     DateTime       @default(now()) @map("date_joined")
  lastLogin      DateTime       @updatedAt @map("last_login")
  profileImage   String?        @map("profile_image")
  emailVerified  Boolean        @default(false) @map("email_verified")
  plan           String         @default("free") // "free" or "plus"
  
  // Relations
  emailOTPs      EmailOTP[]
  settings       UserSettings?
  priceAlerts    PriceAlert[] @relation("UserPriceAlerts")
  pushSubscriptions PushSubscription[] @relation("UserPushSubscriptions")
  
  @@map("core_user")
}

// Market Data model
model MarketData {
  id             Int      @id @default(autoincrement())
  name           String
  value          Float    @default(0.0)
  portSudan      Float    @default(0.0) @map("port_sudan")
  dmtChina       Float    @default(0.0) @map("dmt_china")
  dmtUae         Float    @default(0.0) @map("dmt_uae")
  dmtMersing     Float    @default(0.0) @map("dmt_mersing")
  dmtIndia       Float    @default(0.0) @map("dmt_india")
  status         String   @default("Active")
  forecast       String   @default("Stable")
  trend          Int      @default(0)
  imageUrl       String?  @map("image_url")
  category       String?  @default("others")
  description    String?
  specifications String?  // JSON string
  details        String?  // JSON string array
  availability   String?  // JSON object for monthly availability
  isCurrent      Boolean  @default(true) @map("is_current")
  previousVersionId Int? @map("previous_version_id")
  lastUpdate     DateTime @updatedAt @map("last_update")
  createdAt      DateTime @default(now()) @map("created_at")
  
  priceAlerts    PriceAlert[]

  @@map("core_marketdata")
}

// Market Data Archive
model MarketDataArchive {
  id          Int      @id @default(autoincrement())
  originalId  Int      @map("original_id")
  name        String
  value       Float    @default(0.0)
  portSudan   Float    @default(0.0) @map("port_sudan")
  dmtChina    Float    @default(0.0) @map("dmt_china")
  dmtUae      Float    @default(0.0) @map("dmt_uae")
  dmtMersing  Float    @default(0.0) @map("dmt_mersing")
  dmtIndia    Float    @default(0.0) @map("dmt_india")
  status      String   @default("Active")
  forecast    String   @default("Stable")
  trend       Int      @default(0)
  imageUrl    String?  @map("image_url")
  archivedAt  DateTime @default(now()) @map("archived_at")
  lastUpdate  DateTime @map("last_update")
  createdAt   DateTime @map("created_at")
  
  @@map("core_marketdataarchive")
}

// Email OTP model
model EmailOTP {
  id                    Int      @id @default(autoincrement())
  userId                Int?     @map("user_id")
  email                 String
  otp                   String
  createdAt             DateTime @default(now()) @map("created_at")
  expiresAt             DateTime @map("expires_at")
  isUsed                Boolean  @default(false) @map("is_used")
  verificationAttempts  Int      @default(0) @map("verification_attempts")
  ipAddress             String?  @map("ip_address")
  userAgent             String?  @map("user_agent")
  purpose               String   @default("login")
  
  // Relations
  user                  User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([email, purpose])
  @@index([expiresAt])
  @@map("core_emailotp")
}

// Currency model
model Currency {
  id         Int      @id @default(autoincrement())
  code       String   @unique
  name       String   @default("Currency")
  rate       Float    @default(1.0)
  isCurrent  Boolean  @default(true) @map("is_current")
  previousVersionId Int? @map("previous_version_id")
  lastUpdate DateTime @default(now()) @map("last_update")
  
  @@map("core_currency")
}

// Port model for Quote/Sample forms
model Port {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  location  String?
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("core_port")
}

// Product Variation model
model ProductVariation {
  id          Int      @id @default(autoincrement())
  name        String   // e.g., Grade 1, Organic, Raw
  description String?
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("core_productvariation")
}

// Currency Archive
model CurrencyArchive {
  id         Int      @id @default(autoincrement())
  originalId Int      @map("original_id")
  code       String
  name       String
  rate       Float
  archivedAt DateTime @default(now()) @map("archived_at")
  lastUpdate DateTime @map("last_update")
  
  @@map("core_currencyarchive")
}

// Announcement model
model Announcement {
  id           Int      @id @default(autoincrement())
  title        String
  content      String
  priority     String   @default("medium") // low, medium, high
  isActive     Boolean  @default(true) @map("is_active")
  isFeatured   Boolean  @default(false) @map("is_featured")
  imageUrl     String?  @map("image_url")
  externalLink String?  @map("external_link")
  category     String   @default("news") // news, alert, update, promotion
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  
  @@map("core_announcement")
}

// Announcement Archive
model AnnouncementArchive {
  id         Int      @id @default(autoincrement())
  originalId Int      @map("original_id")
  title      String
  content    String
  priority   String   @default("medium")
  archivedAt DateTime @default(now()) @map("archived_at")
  createdAt  DateTime @map("created_at")
  updatedAt  DateTime @map("updated_at")
  
  @@map("core_announcementarchive")
}

// User Settings model
model UserSettings {
  id                  Int      @id @default(autoincrement())
  userId              Int      @unique @map("user_id")
  emailNotifications  Boolean  @default(true) @map("email_notifications")
  darkMode            Boolean  @default(false) @map("dark_mode")
  language            String   @default("en")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")
  
  // Relations
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("core_usersettings")
}

// Price Alert model
model PriceAlert {
  id           Int        @id @default(autoincrement())
  userId       Int        @map("user_id")
  marketDataId Int        @map("market_data_id")
  targetPrice  Float      @map("target_price")
  condition    String     // "ABOVE" or "BELOW"
  isActive     Boolean    @default(true) @map("is_active")
  createdAt    DateTime   @default(now()) @map("created_at")
  lastTriggered DateTime? @map("last_triggered")

  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade, name: "UserPriceAlerts")
  marketData   MarketData @relation(fields: [marketDataId], references: [id], onDelete: Cascade)

  @@map("core_pricealert")
}

// Push Subscription model
model PushSubscription {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  endpoint  String   @unique
  auth      String
  p256dh    String
  createdAt DateTime @default(now()) @map("created_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, name: "UserPushSubscriptions")

  @@map("core_pushsubscription")
}
